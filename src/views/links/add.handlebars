<div class="container p-4">
    <div class="row">
        <div class="col-md-4 mx-auto">
        {{! mx-auto para centrarlo}}
            <div class="card">
                <div class="card-body">
                    <form action="/links/add" method="POST">
                        <div class="form-group">
                            <input type="text" class="form-control" name="titulo" placeholder="Titulo" autofocus>
                            {{!name para decir cómo va a recibir los datos}}
                            {{!placeholder para que sepa que tiene que escribir ahi}}
                            {{!autofocus para que apenas cargue la pág el cursor ya esté posicionado alli}}
                        </div>
                        <div class="form-group">
                            <input type="url" name="url" class="form-control" placeholder="URL">
                        </div>
                        <div class="form-group">
                            <textarea name="descripcion" rows="2" class="form-control" placeholder="Descripción"></textarea>
                        </div>
                        <div class="form-group">
                            <button class="btn btn-success btn-block">
                            {{! btn-success p que el botón sea verde}}
                            {{! btn-block para que ocupe todo el ancho}}
                                Guardar
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>