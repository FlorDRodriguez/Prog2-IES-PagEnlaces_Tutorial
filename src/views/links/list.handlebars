<div class="container p-4">
    <div class="row">
        
        {{#each links}} {{!recorre los enlaces enviados}}
            <div class="col-md-3">
                <div class="card text-center">
                    <div class="card-body">
                        <a href="{{ url }}" target=".blank">
                            <h3 class="card-title text-uppercase">{{!uppercase para que el texto esté en MAYUS}}
                                {{ titulo }}
                            </h3>
                        </a>
                        <p class="m-2"> {{ descripcion }} </p>

                        {{!<p>{{ timeago created_at }}</p>
                        <p>{{ created_at }} </p>

                        <div class="btn-group">
                            <a href="/links/delete/{{ id }}" class="btn btn-danger">Eliminar</a>
                        </div>
                        <div class="btn-group">
                            <a href="/links/edit/{{ id }}" class="btn btn-secondary">Editar</a>
                        </div>
                    </div>
                </div>
            </div>
        {{else}} {{!Si no hay ningún enlace envia un mje}}
            <div class="col-md-4 mx-auto">
                <div class="card card-body text-center">
                    <p>No hay links creados aún</p>
                    <a href="/links/add">¡Crea uno!</a>
                </div>
            </div>
        {{/each }}

    </div>
</div>